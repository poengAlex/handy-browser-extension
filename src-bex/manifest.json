{
  "manifest_version": 3,
  "name": "Handy browser extension",
  "version": "0.0.1",
  "description": "Browser extension that allows videos to play in sync with your Handy",
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "options_page": "www/index.html#/options",
  "action": {
    "default_popup": "www/index.html#/popup",
    "default_title": "Handy browser plugin"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:9001/*",
        "http://localhost:9000/*",
        "https://index.handyfeeling.com/*",
        "https://www.pornhub.com/view_video.php?viewkey=*",
        "https://www.pornhub.com/embed/*",
        "https://thebenefitmonkey.com/members/scenes/*"
      ],
      "exclude_globs": [],
      "js": [
        "notify.js"
      ],
      "css": [
        "assets/notify.css"
      ]
    },
    {
      "matches": [
        "https://www.pornhub.com/view_video.php?viewkey=*",
        "https://www.pornhub.com/embed/*"
      ],
      "all_frames": true,
      "run_at": "document_idle",
      "js": [
        "pornhub-embed.js"
      ]
    },
    {
      "matches": [
        "http://localhost:9001/*",
        "http://localhost:9000/*",
        "https://index.handyfeeling.com/*"
      ],
      "js": [
        "index-extra.js"
      ]
    },
    {
      "matches": [
        "https://thebenefitmonkey.com/members/scenes/*"
      ],
      "js": [
        "benefit-monkey.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}
